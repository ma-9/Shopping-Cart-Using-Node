<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>Welcome {{ userName }} !</h1>
        <hr>
        <h2>My Orders</h2>
        {{#each orders}}
            <div class="card text-center">
                <div class="card-body">
                    <ul class="list-group">
                        {{#each this.items}}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ this.title }} | {{ this.qty }} Units
                                <span class="badge badge-primary badge-pill">1
                                    {{ this.price }}
                                </span>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="card-footer text-muted">
                    Total Amount :  <strong> $ {{ this.cart.totalPrice }} </strong>
                </div>
            </div>
        {{/each}}
    </div>
</div>